static String capitalizeFirstChar(String str)
{
char[] ch = str.toCharArray(); 
        for (int i = 0; i < ch.length; i++) { 
            int k = i; 
            while (i < ch.length && ch[i] != ' ')  
                i++;
          
              ch[k]=(char)(ch[k] -'a'+'A');
        } 
        return new String(ch); 
}
